{
  "name": "platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/platform/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/platform",
        "main": "apps/platform/src/app/main.ts",
        "tsConfig": "apps/platform/tsconfig.app.json",
        "tsPlugins": [
          {
            "name": "@nestjs/swagger/plugin",
            "options": {
              "dtoFileNameSuffix": [
                ".entity.ts",
                ".dto.ts"
              ],
              "controllerFileNameSuffix": [
                ".controller.ts"
              ],
              "classValidatorShim": true,
              "dtoKeyOfComment": "description",
              "controllerKeyOfComment": "description",
              "introspectComments": true
            }
          }
        ],
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/platform/src/app/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "apps/platform/src/app/i18n/",
            "output": "i18n"
          }
        ],
        "isolatedConfig": true,
        "webpackConfig": "apps/platform/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "platform:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "platform:build:development"
        },
        "production": {
          "buildTarget": "platform:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/platform/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/platform/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "generate-client": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "openapi-generator-cli generate -i ./apps/platform/resources/openapi-docs.json -g typescript-axios -o libs/clients/platform-client/src/lib/generated -c ./apps/platform/resources/openapi-server-generator.config.yaml"
        ]
      }
    }
  },
  "tags": []
}